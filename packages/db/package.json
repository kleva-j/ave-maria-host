{
  "name": "@host/db",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./src/index.ts"
    },
    "./*": {
      "types": "./dist/*.d.ts",
      "default": "./src/*.ts"
    }
  },
  "scripts": {
    "build": "tsdown",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:start": "docker compose up -d",
    "db:watch": "docker compose up",
    "db:stop": "docker compose stop",
    "db:down": "docker compose down",
    "effect:migrate-db": "bun run src/scripts/migrator.ts",
    "effect:reset-db": "bun run src/scripts/reset.ts",
    "effect:reset-db:node": "npx tsx src/scripts/reset.ts",
    "effect:seed-db": "bun run src/scripts/seed.ts",
    "effect:backup-db": "bun run src/scripts/backup.ts",
    "effect:restore-db": "bun run src/scripts/restore.ts",
    "effect:test": "bun run src/scripts/test.ts",
    "effect:renew-db": "run-s effect:reset-db db:migrate effect:seed-db",
    "effect:destroy-db": "run-s effect:backup-db effect:reset-db db:down",
    "migration:manager": "bun run src/scripts/migration-manager.ts",
    "migration:status": "bun run src/scripts/migration-manager.ts status",
    "migration:up": "bun run src/scripts/migration-manager.ts up",
    "migration:validate": "bun run src/scripts/migration-manager.ts validate",
    "migration:history": "bun run src/scripts/migration-manager.ts history",
    "seed:enhanced": "bun run src/scripts/enhanced-seed.ts",
    "seed:development": "bun run src/scripts/enhanced-seed.ts development --validate",
    "seed:testing": "bun run src/scripts/enhanced-seed.ts testing --clean --validate",
    "seed:staging": "bun run src/scripts/enhanced-seed.ts staging --validate",
    "seed:demo": "bun run src/scripts/enhanced-seed.ts demo --clean --validate",
    "integrity:check": "bun run src/scripts/data-integrity-checker.ts",
    "integrity:fix": "bun run src/scripts/data-integrity-checker.ts --fix",
    "integrity:report": "bun run src/scripts/data-integrity-checker.ts --report",
    "integrity:quick": "bun run src/scripts/data-integrity-checker.ts --quick",
    "deploy:development": "bun run src/scripts/deployment-manager.ts development",
    "deploy:staging": "bun run src/scripts/deployment-manager.ts staging",
    "deploy:production": "bun run src/scripts/deployment-manager.ts production",
    "deploy:dry-run": "bun run src/scripts/deployment-manager.ts development --dry-run"
  },
  "devDependencies": {
    "@types/pg": "^8.11.11",
    "drizzle-kit": "^0.31.2",
    "npm-run-all": "^4.1.5",
    "tsdown": "catalog:",
    "tsx": "^4.19.2"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "@effect/platform": "catalog:",
    "@effect/platform-node": "^0.98.4",
    "@effect/sql": "^0.46.0",
    "@effect/sql-drizzle": "^0.45.0",
    "@effect/sql-pg": "^0.47.0",
    "@host/shared": "workspace:*",
    "dotenv": "catalog:",
    "drizzle-orm": "catalog:",
    "effect": "^3.18.4",
    "pg": "^8.14.1",
    "zod": "catalog:"
  }
}
