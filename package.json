		"@radix-ui/react-toggle": "^1.0.1",
		"@radix-ui/react-toolbar": "^1.0.2",
		"@radix-ui/react-tooltip": "^1.1.2",
		"@stitches/react": "^1.2.8",
		"@tanstack/react-query": "^4.23.0",
		"@trpc/client": "^10.45.2",
		"@trpc/next": "^10.45.2",
		"@trpc/react-query": "^10.45.2",
		"@trpc/server": "^10.45.2",
		"clsx": "^1.1.1",
		"lodash.merge": "^4.6.2",
		"next": "^13.1.6",
